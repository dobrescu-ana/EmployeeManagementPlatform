<h2>To Do List</h2>

<div class="card-body">
    <ul class="todo-list" data-widget="todo-list">

        @foreach (var item in Model)
        {
        <li>
            <!-- drag handle -->
            <span class="handle">
                <i class="fas fa-ellipsis-v"></i>
                <i class="fas fa-ellipsis-v"></i>
            </span>
            <!-- checkbox -->
            <div class="icheck-primary d-inline ml-2">
                <input type="checkbox" value="" name="todo1" id="todoCheck1">
                <label for="todoCheck1"></label>
            </div>
            <!-- todo text -->
            <span class="text">@Html.DisplayFor(modelItem => item.Title)</span>
            <!-- Emphasis label -->
            @if (@item.difference < 0)
            {
                <small class="badge badge-danger"><i class="far fa-clock"></i> Deadline passed</small>
            }
            else
            {
                <small class="badge badge-info"><i class="far fa-clock"></i> @item.difference</small>
            }
            <!-- General tools such as edit or delete-->
            <div class="tools">
                <i class="fas fa-edit"></i>
                <i class="fas fa-trash-o"></i>
            </div>
        </li>
        }
    </ul>
</div>

